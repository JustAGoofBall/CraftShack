@page
@model IndexModel
@{
    ViewData["Title"] = "Accounts";
}
<h2>Accounts</h2>
<a asp-page="CreateUser" class="btn btn-success mb-2">Nieuwe gebruiker</a>
@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-info">@TempData["StatusMessage"]</div>
}
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Rollen</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.Email</td>
            <td>
                @foreach (var role in Model.UserRoles[user.Id])
                {
                    <span class="badge bg-primary">@role</span>
                }
            </td>
            <td>
                <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Bewerken</a>
                <a asp-page="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Verwijderen</a>
            </td>
        </tr>
    }
    </tbody>
</table>