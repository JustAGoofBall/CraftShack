@model IEnumerable<CraftShack.Models.Product>

@{
    ViewData["Title"] = "Our Minecraft Menu";
}

<h1 class="mb-4 text-success">Our Minecraft Menu</h1>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var product in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text fs-5 fw-bold">$@product.Price</p>
                    @if (!string.IsNullOrWhiteSpace(product.Description))
                    {
                        <p class="card-text">@product.Description</p>
                    }
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-primary btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-secondary btn-sm">Edit</a>
                </div>
            </div>
        </div>
    }
</div>
